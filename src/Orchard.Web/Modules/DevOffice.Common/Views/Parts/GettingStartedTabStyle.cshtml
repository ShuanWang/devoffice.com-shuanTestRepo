            </li>
        }
        @if (!string.IsNullOrEmpty(Model.FirstBlockIcon6))
        {
            <li class="col-xs-2 col-sm-2">
                <a href="#subTab6" class="firstblock-subtab" role="tab" data-toggle="tab"><span><img src="@Model.FirstBlockIcon6" alt="@Model.FirstBlockTitle6 Image" /></span></a>
            </li>
        }
    </ul>

    <!-- Sub Tab panes -->
    <div class="tab-content spage-tab-content">

        <div class="tab-pane active" id="subTab1">
            @foreach (var screenshot in Model.FirstBlockScreenshots1)
            {
                <a href="@screenshot.ImageUrl"><img class="img-responsive" src="@screenshot.Image" alt="@screenshot.Title Image" /></a>
            }
        </div>
        <div class="tab-pane" id="subTab2">
