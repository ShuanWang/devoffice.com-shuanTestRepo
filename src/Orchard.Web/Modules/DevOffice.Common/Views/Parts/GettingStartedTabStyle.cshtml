@model DevOffice.Common.ViewModels.GettingStartedTab


<!-- Tab panes -->
<div class="tab-content sp-tabStyle-content">
    
    @Html.Raw(Model.FirstBlockContent)

    <!-- Sub Nav tabs -->
    <ul class="nav nav-tabs sp-tabStyle-tabs" role="tablist">
        
        @*System should chek weather these are available*@
        @if (!string.IsNullOrEmpty(Model.FirstBlockIcon1))
        {
            <li class="col-xs-2 col-sm-2 active">
                <a href="#subTab1" class="firstblock-subtab" role="tab" data-toggle="tab"><span><img src="@Model.FirstBlockIcon1" alt="@Model.FirstBlockTitle1" /></span></a>
            </li>
        }
        @if (!string.IsNullOrEmpty(Model.FirstBlockIcon2))
        {
            <li class="col-xs-2 col-sm-2">
                <a href="#subTab2" class="firstblock-subtab" role="tab" data-toggle="tab"><span><img src="@Model.FirstBlockIcon2" alt="@Model.FirstBlockTitle2 Image" /></span></a>
            </li>
        }
        @if (!string.IsNullOrEmpty(Model.FirstBlockIcon3))
        {
            <li class="col-xs-2 col-sm-2">
                <a href="#subTab3" class="firstblock-subtab" role="tab" data-toggle="tab"><span><img src="@Model.FirstBlockIcon3" alt="@Model.FirstBlockTitle3 Image" /></span></a>
            </li>
        }
        @if (!string.IsNullOrEmpty(Model.FirstBlockIcon4))
        {
            <li class="col-xs-2 col-sm-2">
                <a href="#subTab4" class="firstblock-subtab" role="tab" data-toggle="tab"><span><img src="@Model.FirstBlockIcon4" alt="@Model.FirstBlockTitle4 Image" /></span></a>
            </li>
