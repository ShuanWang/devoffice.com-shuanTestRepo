@{
    if (string.IsNullOrEmpty(HttpContext.Current.Request.Url.Query) == false)
    {
        // Parse the query string variables into a NameValueCollection.
        System.Collections.Specialized.NameValueCollection qscoll = HttpUtility.ParseQueryString(HttpContext.Current.Request.Url.Query);
        if (qscoll.Count > 0)
        {
            string product = qscoll["product"];
            if (Devoffice.GettingStarted.Utils.InputValidation.isValidProduct(product))
            {
                Session[Devoffice.GettingStarted.Utils.Constants.productNameTagStr] = product;
            }
            else {
                Session[Devoffice.GettingStarted.Utils.Constants.productNameTagStr] = null;    
            }
        }
    } else {
        Session[Devoffice.GettingStarted.Utils.Constants.productNameTagStr] = null;
    }

}
