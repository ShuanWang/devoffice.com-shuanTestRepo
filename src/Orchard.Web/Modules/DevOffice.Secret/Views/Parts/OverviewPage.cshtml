@{
    var rows = Model.ContentPart.RowWithTilesPart.Rows;
}

<div class="row banner-image">
    <img src="@Model.ViewModel.BannerImage">
</div>

<div id='devCenter-partner-overview'>
    <div class='container-fluid'>
        <div class='row page-title'>
            <div class='col-lg-12 col-md-12'>
                <h1>@Model.ViewModel.Title</h1>
            </div>
        </div>
    </div>
    <div class="container-fluid intro-text">
        <div class="row page-body-text">
            <div class="col-md-12">
                @Model.ViewModel.IntroText
            </div>
        </div>
    </div>
    
    
    
    @foreach (var row in rows) {
        <div class='partner-overview-content-row-one'>
            <div class='container-fluid'>
                <div class='row page-body'>
                    <div class='col-lg-8 col-md-8'>
                        <div class='page-subtitle'>
                            @row.Title
                        </div>
                        <div class='page-body-text'>
                            @row.Body
                        </div>
                        @if ( row.ExternalLink != null) {
                            <div class='page-body-link'>
                                <a href="@row.ExternalLink">
                                    Learn More
                                    <i class="icon_seemore"></i>
                                </a>
                            </div>
                        }
                    </div>
 
                    <div class='col-lg-4 col-md-4'>
                        @if (@row.Tile1Title != null) {
                            <div class='tile-container'>
                                <div class='tile-header row'>
                                    <div class='tile-image col-xs-4' style="background-image: url(@row.Tile1Thumbnail); background-size: 40px 40px; background-position: center; background-repeat: no-repeat;"></div>
                                    <div class='tile-title col-xs-8'>
                                        @row.Tile1Title
                                    </div>
                                </div>
                                <div class='tile-content'>
                                    @if (row.Tile1ExternalLink != null) {
                                        <div class='tile-link'>
                                            <a href="@row.Tile1ExternalLink">
                                                View
                                                <i class="icon_seemore"></i>
                                            </a>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                        @if (@row.Tile2Title != null) {
                            <div class='tile-container'>
                                <div class='tile-header row'>
                                    <div class='tile-image col-xs-4' style="background-image: url(@row.Tile2Thumbnail); background-size: 40px 40px; background-position: center; background-repeat: no-repeat;"></div>
                                    <div class='tile-title col-xs-8'>
                                        @row.Tile2Title
                                    </div>
                                </div>
                                <div class='tile-content'>
                                    @if ( row.Tile2ExternalLink != null) {
                                        <div class='tile-link'>
                                            <a href="@row.Tile2ExternalLink">
                                                View
                                                <i class="icon_seemore"></i>
                                            </a>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                
                </div>
            </div>
        </div>
    }
</div>